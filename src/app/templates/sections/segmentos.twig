<section>
  <div class="bg-linear-to-t from-white from-50% to-gray-100 to-50% py-32">
    <div class="container">
      <div class="max-w-2xl mx-auto">
        <h2 class="titulo mb-20">Escolha a solução ideal</h2>
      </div>

      <div class="grid md:grid-cols-2 gap-5">

        {% for segmento in segmentos %}
        <!-- Component: Horizontal card-->
          <div class="flex flex-col overflow-hidden bg-white rounded-xl shadow-md sm:flex-row shadow-slate-200">
            <!-- Image -->
            <figure class="">
              <img
                src="{{ images }}/layout/{{ segmento.imagem }}.webp"
                alt="ERP para {{ segmento.titulo }}"
                title="ERP para {{ segmento.titulo }}"
                width="240"
                height="384"
                class="object-cover min-w-full md:max-w-60 h-50 md:h-full"
              />
            </figure>
            <!-- Body-->
            <div class="px-8 py-15">
              <div class="flex mb-5">
                <svg id="a" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" class="h-11">
                  <circle cx="24" cy="24" r="24" fill="#f2673c"/><path d="{{ segmento.icone }}"/>
                </svg>
                <h3 class="text-4xl ml-4">ERP para<br><span class="font-semibold">{{ segmento.titulo }}</span></h3>
              </div>
              <p class="mb-5">{{ segmento.texto }}</p>

              {% include "ui/button.twig" with {
                link: links.segmento[segmento.link],
                text: segmento.botao
              } %}

            </div>
          </div>
        <!-- End Horizontal card-->
        {% endfor %}

      </div>

    </div>
  </div>
</section>