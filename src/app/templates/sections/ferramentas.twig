<section>
  <div class="rounded-b-4xl z-10">
    <div class="container">

      <div class="max-w-2xl mx-auto">
        <h2 class="titulo mb-15">Potencialize seu ERP com essas ferramentas</h2>
      </div>

      {% for ferramenta in ferramentas %}
      <div class="grid md:grid-cols-2 max-w-4xl mx-auto items-center justify-items-center {% if loop.index is even %} md:my-20 {% endif %}">

        <div class=" {% if loop.index is even %} md:order-2 {% endif %}">
          <img
            src="{{ images }}/logos/{{ferramenta.logo}}.svg"
            alt="{{ ferramenta.titulo }}"
            title="{{ ferramenta.titulo }}"
            class="w-32"
            width="128"
            height="40"
            loading="lazy"
          >
          <h3 class="font-semibold text-2xl md:text-3xl my-5">{{ ferramenta.titulo }}</h3>
          
            {% if ferramenta.lista is not empty %}
              <ul class="mb-5 space-y-2">
                 {% for texto in ferramenta.lista %} 
                  <li>
                    <svg id="" class="h-2 mr-1 inline" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 8.15 6.49"><path d="M6.88.21c.3-.29.77-.27,1.06.03.27.29.28.73,0,1.02l-3.99,4.99c-.28.3-.76.32-1.06.04,0,0-.01-.01-.02-.02L.24,3.62c-.3-.28-.32-.76-.04-1.06s.76-.32,1.06-.04c.01.01.03.02.04.04l2.09,2.09L6.87.23l.02-.02Z" fill="#f2673c"/></svg>
                    {{ texto }}
                  </li>
                 {% endfor %} 
              </ul>
            {% endif %}

          <a class="btn btn-primary mx-auto" href="#form">{{ ferramenta.botao }}</a>
        </div>

        <div class=" {% if loop.index is even %} md:order-1 {% endif %}">
          <img
            src="{{ images }}/layout/{{ferramenta.img}}.webp"
            alt="{{ ferramenta.titulo }}"
            title="{{ ferramenta.titulo }}"
            width="448"
            height="458"
            class="max-sm:pt-10 max-sm:pb-20"
            loading="lazy"
          >
        </div>

      </div>
      {% endfor %}

    </div>
  </div>
</section>