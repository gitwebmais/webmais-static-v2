<section class="bg-primary py-20">
  <div class="container">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-5xl font-semibold">Gerencie todos os setores com o ERP WebMais!</h2>
    </div>
    <div>
      <!--slide-->
      <div class="mt-10">
        <div class="glide" data-glide data-config='{{ setores.config|json_encode|raw }}'>
          <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides">
              {% for setor in setores.items %}
              <li class="glide__slide">
                <div class="bg-white rounded-lg p-7">
                  
                  <svg class="icon size-20 mb-5" data-icon="setor:{{ setor.icone }}"></svg>
                  <h3 class="text-xl font-medium mb-2">{{ setor.titulo }}</h3>
                  <p class="mb-3 text-sm">{{ setor.texto }}</p>
                  <a class="btn" href="{{ setor.link }}">Saiba Mais</a>
                  
                </div>
              </li>
              {% endfor %}
            </ul>
          </div>
          <div class="glide__bullets" data-glide-el="controls[nav]">
            {% for setor in setores.items %}
              <button
                class="glide__bullet"
                data-glide-dir="={{ loop.index0 }}"
                aria-label="Slide {{ loop.index }}"
              ></button>
            {% endfor %}
          </div>
        </div>

      </div>
      <!--end slide-->
    </div>
  </div>
</section>